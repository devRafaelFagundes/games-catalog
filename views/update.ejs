<%- include('./components/header.ejs')  %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form action="/games/update/<%= id %>?_method=PUT" method="post">
        <label for="title">Title: </label>
        <input type="text" name="title" value="<%= game.title %>" id="title" required>
        <label for="owner">Owner: </label>
        <input type="text" name="owner" value="<%= game.owner %>" id="owner" required>
        <label for="year">Year: </label>
        <input type="number" name="year" value="<%= game.year %>" id="year" min="1500" required>
        <label for="rating">Rating: </label>
        <input type="number" name="rating" value="<%= game.rating %>" id="rating" min="0" max="10" required>
        <select name="genre" id="filter">
            <option value="board-game">boardgame</option>
            <option value="plataformer">plataformer</option>
            <option value="fps-shooter">fps-shooter</option>
            <option value="other">other</option>
        </select>
        <label for="about">About: </label>
        <input type="text" name="about" value="<%= game.about %>" id="about">
        <button type="submit">save</button>
        <a href="/games">back to homepage</a>
    </form>
</body>
</html>