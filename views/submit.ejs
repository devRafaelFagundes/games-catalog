<%- include('./components/header.ejs')  %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form action="/games/submit" method="post">
        <label for="title">Title: </label>
        <input type="text" name="title" id="title" maxlength="200" placeholder="200 caracters max" required>
        <label for="owner">Author: </label>
        <input type="text" name="owner" id="owner" maxlength="200" placeholder="200 caracters max" required>
        <label for="year">year: </label>
        <input type="number" name="year" min="1800" max="<%= maxYear %>" id="year" required>
        <label for="rating">Rating: </label>
        <input type="number" name="rating" id="rating" min="0" max="10" required>
        <label for="genre_submit">genre</label>
        <select name="genre" id="genre_submit">
            <option value="board-game">boardgame</option>
            <option value="plataformer">plataformer</option>
            <option value="fps-shooter">fps-shooter</option>
            <option value="other">other</option>
        </select>
        <label for="about">About: </label>
        <input type="text" name="about" id="about">
        <button type="submit">submit</button>

    </form>
</body>
</html>