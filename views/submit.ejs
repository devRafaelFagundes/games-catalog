<%- include('./components/header.ejs')  %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/submit.css">
</head>
<body>
    <div id="formsSubmit">
        <form action="/games/submit" method="post">
            <label for="title">Title: </label>
            <input type="text" name="title" id="title" maxlength="65" placeholder="65 caracters max" required>
            <label for="owner">Owner: </label>
            <input type="text" name="owner" id="owner" maxlength="60" placeholder="60 caracters max" required>
            <label for="year">Year: </label>
            <input type="number" name="year" min="1800" max="<%= maxYear %>" id="year" placeholder="between 1800 and <%= maxYear %>" required>
            <label for="rating">Rating: </label>
            <input type="number" name="rating" id="rating" min="0" max="10" required>
            <label for="genre_submit">Genre</label>
            <select name="genre" id="genre_submit">
                <option value="board-game">boardgame</option>
                <option value="plataformer">plataformer</option>
                <option value="fps-shooter">fps-shooter</option>
                <option value="other">other</option>
            </select>
            <label for="about">About: </label>
            <input type="text" name="about" id="about">
            <button type="submit">submit</button>
        </form>
    </div>
    <div id="create">
        <a href="/games">back to homepage</a>
    </div>
    
</body>
</html>